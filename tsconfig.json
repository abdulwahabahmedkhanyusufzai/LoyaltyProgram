{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "noImplicitThis": false,
    "alwaysStrict": false,
    "useUnknownInCatchVariables": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noEmit": false, // ✅ Allow emitting JS files
    "module": "commonjs", // ✅ Node.js compatible
    "moduleResolution": "node", // ✅ Node-style resolution
    "resolveJsonModule": true,
    "isolatedModules": true, // ✅ Needed for server compilation
    "jsx": "react-jsx",
    "incremental": true,
    "outDir": "dist", // ✅ Output compiled JS here
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "src/server/**/*.ts",
    "server/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
