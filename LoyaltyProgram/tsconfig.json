{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,                 // ❌ Disable all strict checks
    "noImplicitAny": false,          // ❌ Allow implicit any
    "strictNullChecks": false,       // ❌ Disable null checks
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "noImplicitThis": false,
    "alwaysStrict": false,
    "useUnknownInCatchVariables": false,
    "noUnusedLocals": false,         // ❌ Allow unused variables
    "noUnusedParameters": false,     // ❌ Allow unused params
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,

    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": false,        // ❌ Disable isolatedModules strictness
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      { "name": "next" }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
